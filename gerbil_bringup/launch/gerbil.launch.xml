<launch>
    <!-- ==================== ARGUMENTS ==================== -->
    <!-- Set use_mock_hardware:=false for real robot -->
    <arg name="use_mock_hardware" default="true" />
    <arg name="launch_rviz" default="true" />
    <arg name="launch_imu" default="true" />

    <!-- ==================== PATHS ==================== -->
    <let name="urdf_path" 
         value="$(find-pkg-share gerbil_description)/urdf/gerbil.urdf.xacro" />
    <let name="rviz_config_path"
         value="$(find-pkg-share gerbil_description)/rviz/urdf_config.rviz" />

    <!-- ==================== ROBOT STATE PUBLISHER ==================== -->
    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description"
               value="$(command 'xacro $(var urdf_path) use_mock_hardware:=$(var use_mock_hardware)')" />
    </node>

    <!-- ==================== ROS2 CONTROL ==================== -->
    <node pkg="controller_manager" exec="ros2_control_node" output="screen">
        <param name="robot_description"
               value="$(command 'xacro $(var urdf_path) use_mock_hardware:=$(var use_mock_hardware)')" />
        <param from="$(find-pkg-share gerbil_bringup)/config/gerbil_controllers.yaml" />
    </node>

    <!-- Spawners for controllers -->
    <node pkg="controller_manager" exec="spawner" args="joint_state_broadcaster" />
    <node pkg="controller_manager" exec="spawner" args="diff_drive_controller" />

    <!-- ==================== IMU (BNO055) ==================== -->
    <group if="$(var launch_imu)">
        <node pkg="imu_package" exec="bno055_imu_node" output="screen">
            <param from="$(find-pkg-share imu_package)/config/bno055_params.yaml" />
        </node>
    </group>

    <!-- ==================== RVIZ ==================== -->
    <group if="$(var launch_rviz)">
        <node pkg="rviz2" exec="rviz2" output="screen"
              args="-d $(var rviz_config_path)" />
    </group>
</launch>