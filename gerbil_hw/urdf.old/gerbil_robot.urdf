<?xml version="1.0"?>
<robot name="gerbil_robot">
  <!-- Base link with inertial and collision (thin chassis - 4mm) -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="5.0"/>
      <inertia ixx="0.04167" ixy="0.0" ixz="0.0" iyy="0.15417" iyz="0.0" izz="0.1875"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.6 0.3 0.004"/>  
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.6 0.3 0.004"/>
      </geometry>
    </collision>
  </link>

  <!-- Jetson command board (thin square on top center) -->
  <link name="jetson_mount">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.15"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0002"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.1 0.1 0.01"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.01"/>
      </geometry>
    </collision>
  </link>

  <joint name="jetson_mount_joint" type="fixed">
    <parent link="base_link"/>
    <child link="jetson_mount"/>
    <origin xyz="0 0 0.007" rpy="0 0 0"/>  <!-- Adjusted for 4mm base -->
  </joint>

  <!-- IMU sensor (next to Jetson) -->
  <link name="imu_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.01"/>
      <inertia ixx="1e-06" ixy="0.0" ixz="0.0" iyy="1e-06" iyz="0.0" izz="1e-06"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.025 0.025 0.01"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.025 0.025 0.01"/>
      </geometry>
    </collision>
  </link>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0.07 0.007" rpy="0 0 0"/>  <!-- Adjusted for 4mm base -->
  </joint>

  <!-- ZED 2i camera (front, above caster) -->
  <link name="zed2i_camera">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.12"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.03 0.175 0.03"/>
      </geometry>
      <material name="dark_gray">
        <color rgba="0.2 0.2 0.2 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.03 0.175 0.03"/>
      </geometry>
    </collision>
  </link>

  <joint name="zed2i_joint" type="fixed">
    <parent link="base_link"/>
    <child link="zed2i_camera"/>
    <origin xyz="0.3 0 0.017" rpy="0 0 0"/>  <!-- Adjusted for 4mm base -->
  </joint>

  <!-- Motor/RoboClaw mount (below base, between wheels) -->
  <link name="motor_mount">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.15 0.25 0.05"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.15 0.25 0.05"/>
      </geometry>
    </collision>
  </link>

  <joint name="motor_mount_joint" type="fixed">
    <parent link="base_link"/>
    <child link="motor_mount"/>
    <origin xyz="-0.1 0 -0.027" rpy="0 0 0"/>  <!-- Adjusted for 4mm base -->
  </joint>

  <!--
  These are the wheels of the robot (left, right, caster)
  Wheels have textured appearance with tread pattern simulation
  -->
  
  <link name="left_wheel">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.00012" ixy="0.0" ixz="0.0" iyy="0.00012" iyz="0.0" izz="0.000061"/>
    </inertial>
    <!-- Main wheel body (darker rubber-like color) -->
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.035"/>
      </geometry>
      <material name="wheel_rubber">
        <color rgba="0.15 0.15 0.15 1"/>  <!-- Dark rubber appearance -->
      </material>
    </visual>
    <!-- Inner hub (lighter gray) -->
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.021"/>  <!-- Slightly taller to show hub -->
      </geometry>
      <material name="wheel_hub">
        <color rgba="0.4 0.4 0.4 1"/>  <!-- Lighter gray for hub -->
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.035" length="0.02"/>
      </geometry>
    </collision>
  </link>

  <link name="right_wheel">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.00012" ixy="0.0" ixz="0.0" iyy="0.00012" iyz="0.0" izz="0.000061"/>
    </inertial>
    <!-- Main wheel body (darker rubber-like color) -->
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.035"/>
      </geometry>
      <material name="wheel_rubber">
        <color rgba="0.15 0.15 0.15 1"/>
      </material>
    </visual>
    <!-- Inner hub (lighter gray) -->
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.021"/>
      </geometry>
      <material name="wheel_hub">
        <color rgba="0.4 0.4 0.4 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.035" length="0.02"/>
      </geometry>
    </collision>
  </link>

    <link name="caster_wheel">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="2e-05" ixy="0.0" ixz="0.0" iyy="2e-05" iyz="0.0" izz="2e-05"/>
    </inertial>
    <visual>
      <geometry>
        <sphere radius="0.0175"/>  
      </geometry>
      <material name="caster_color">
        <color rgba="0.3 0.3 0.3 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.0175"/>
      </geometry>
    </collision>
  </link>

  <!--
  These are the joints for the wheels (left, right, caster)
  -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="-0.1 0.15 -0.037" rpy="0 0 0"/>  
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="-0.1 -0.15 -0.037" rpy="0 0 0"/>  
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="caster_wheel_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_wheel"/>
    <origin xyz="0.3 0 -0.0175" rpy="0 0 0"/>  
  </joint>

  <!-- ROS2 Control configuration for RoboClaw -->
  <ros2_control name="RoboClawSystem" type="system">
    <hardware>
      <plugin>roboclaw_hardware_interface/RoboClawHardwareInterface</plugin>
      <param name="serial_port">/dev/ttyTHS1</param>
    </hardware>
    <joint name="left_wheel_joint">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <param name="address">128</param>
      <param name="qppr">500</param>
      <param name="motor_type">M1</param>
    </joint>
    <joint name="right_wheel_joint">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <param name="address">128</param>
      <param name="qppr">500</param>
      <param name="motor_type">M2</param>
    </joint>
  </ros2_control>
  
</robot>